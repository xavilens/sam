<%= simple_form_for @member, remote: true do |f| %>
  <div class="modal-body">
    <%= f.input :band_id, as: :hidden %>
    <%= f.input :musician_id, as: :hidden %>
    <% if type == "new" %>
      <%= f.input :instrument_id, as: :hidden %>
    <% else %>
      <%= f.association :instrument, collection: Instrument.all.order(:name),
        label: 'Instrumento', prompt: 'Elige un instrumento',
        order: 'name', wrapper: :field_5_offset_2_label_3 %>
    <% end %>
  </div>

  <div class="clearfix gap-top gap-bottom"></div>

  <div class="modal-footer">
    <% submit_title = type == "new" ? 'Aceptar' : 'Enviar peticiÃ³n' %>
    <%= f.submit submit_title, class: "btn btn-primary btn-md btn-block" %>
  </div>
<% end %>
