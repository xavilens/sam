<div class="col-sm-2">
  <div class="image-index-thumb">
    <%= link_to user_image_path(user_id: @user.id, id: image.id), title: image.title do %>
      <%= image_tag image.image_url(:thumb_lg), alt: image.title, class: 'img-responsive' %>
    <% end %>

    <div class="row">
      <div class="col-sm-12 text-center">
        <div class="image-index-title">
          <%= link_to image.title, user_image_path(user_id: @user.id, id: image.id), class: 'link-black' %>
        </div>
      </div>
    </div>

    <% if current_user? %>
      <div class="image-index-links">
        <div class="no-gutter">
          <div class="no-gutter-sm-6 text-center">
            <%= link_to fa_icon('pencil'), edit_image_path(image), class: 'btn btn-link btn-sm' %>
          </div>
          <div class="no-gutter-sm-6 text-center">
            <%= link_to fa_icon('trash'), user_image_path(user_id: @user, id: image.id),
              class: 'image-delete btn btn-link btn-sm', remote: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
