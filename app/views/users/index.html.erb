
<%
page_title @type
%>

<div class="row">
  <div class="col-md-3 text-center">
    <h3><strong>Buscador de Artistas!</strong></h3>
  </div>

  <div class="col-md-8">
    <div class="page-header">
      <h1><%= traducir_type @type %></h1>
    </div>

    <% unless @users.blank?  %>
      <% @users.each do |user| %>
        <div class="">
          <h3><%= link_to user.name, user_path(user.id) %></h3>
          <h5><%= user.profileable_type %></h5>
          <p>
            Ubicaci√≥n: <%= user.city+", "+user.state %>
          </p>
        </div>
        <% if user != @users.last %>
          <hr>
        <% end %>
      <% end %>
    <% else %>
      <p>
        Aun no hay usuarios registrados
      </p>
    <% end %>
  </div>
</div>
