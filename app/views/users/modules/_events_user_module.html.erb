
<div class="calendar-container">
  <div class="leftbar-name">Calendario</div>
  <table class="table table-bordered table-striped table-hover">
    <tbody>
    <% if @user.any_events? %>
      <% @user.all_events.each do |event| %>
        <tr class="event">
          <td>
            <small class="event-user-date text-right"><%= event.date %></small>
            <h4 class="event-user-header"><%= link_to event.name, event_path(event) %>
              <small class="event-user-type"><%= event.type %></small>
            </h4>
            <small class="event-user-location text-right"><%= event.location_city %></small>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>No hay ning√∫n evento.</tr>
    <% end %>
    </tbody>
  </table>
  <div class="user-links text-right">
    <%= link_to 'Nuevo evento', new_user_event_path(user_id: @user.id), class: 'pull-left' if current_user? %>
    <%= link_to 'Ver todos', user_events_path(user_id: @user.id), class: 'pull-right' if @user.any_events? %>
  </div>
</div>
