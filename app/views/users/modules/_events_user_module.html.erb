
<div class="calendar-container">
  <div class="leftbar-name">Calendario</div>
  <% if @user.any_events? %>
  <table class="table table-bordered table-condensed table-hover">
    <tbody>
      <% @user.events_in_show(5).each do |event| %>
        <tr class="event">
          <td>

            <div class="col-sm-2 event-user-date">
              <div class="row month">
                <%= event.month(:abbr) %>
              </div>
              <div class="row">
                <div class="day">
                  <%= event.day %>
                </div>
              </div>
            </div>

            <div class="col-sm-10 event-user-data">
              <div class="event-user-header">
                <%= link_to event.name, user_event_path(user_id: event.creator_id, id: event.id) %>
                <small class="event-user-type"><%= event.type %></small>
              </div>
              <small class="event-user-location"><%= event.location_city %></small>
            </div>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p class="gap-left gap-bottom">No hay ning√∫n evento.</p>
  <% end %>

  <% if is_current_user? || @user.any_events? %>
  <div class="user-links">
    <%= link_to 'Nuevo evento', new_event_path, class: 'btn btn-sm btn-link' if current_user? %>
    <%= link_to 'Ver todos', user_events_path(user_id: @user.id), class: 'btn btn-sm btn-link' if @user.any_events? %>
  </div>
  <% end %>
</div>
