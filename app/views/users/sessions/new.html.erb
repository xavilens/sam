
<% page_title @page %>

<!-- <div class="col-md-10 col-md-offset-1"> -->
  <%= render 'layouts/page_header' %>

  <div class='form-signin'>
    <%= simple_form_for( resource, as: resource_name, url: session_path(resource_name) ) do |f| %>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: 'Introduce tu email' %>
        <%= f.input :password, required: false, label: 'Contraseña', placeholder: 'Contraseña' %>
        <%= f.input :remember_me, label: 'Recuérdame', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Acceder", class: 'btn btn-md btn-primary' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
