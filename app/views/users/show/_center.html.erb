
<!-- User Header -->
<div class="user-show-header">
  <div class="user-header">
    <%= @page %> <small><%= @user.type %></small>
  </div>
  <div class="user-sub-header">
    <%= user.sub_header %>
  </div>
</div>

<hr>
<!-- END User Header -->

<!-- User Bio -->
<% if @user.bio? %>
  <div class="bio-container">
    <div class="center-name">Biograf√≠a</div>

    <div class="bio-text">
      <div class="user-bio ellipsis">
        <%= user.bio %>
      </div>
    </div>
  </div>
<% end %>
<!-- END User Bio -->

<div class="clearfix"></div>

<!-- User Music -->
<% if @user.songs? %>
  <div class="music-container">
    <div class="center-name">Canciones</div>
    <div class="music-player col-sm-12">
      <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/46363213&amp;color=ff5500&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false"></iframe>
    </div>
  </div>
<% end %>
<!-- END User Music -->

<!-- User Videos -->
<% if @user.profile_videos? %>
  <div class="videos-container">
    <div class="center-name">
      Videos
      <div class="pull-right">
        <%= link_to 'Ver todos', user_videos_path(user_id: @user.id), class: 'btn btn-link' %>
      </div>
    </div>

    <% @user.profile_videos.each do |video| %>
      <div class="video-container">
        <%= render 'videos/video_row', video: video %>
      </div>
    <% end %>
  </div>
<% end %>
<!-- END User Videos -->
