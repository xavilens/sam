
<% if user_signed_in? %>

  <!-- MENSAJES -->
  <li>
    <%= link_to messages_path do %>
      <%= unread_conversations_count %> Mensajes
    <% end %>
  </li>
  <!-- END MENSAJES -->

  <!-- MENÚ USUARIO -->
  <li class="dropdown">

    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
      aria-haspopup="true" aria-expanded="false">
      <%= image_tag(current_user.avatar_url(:thumb_xs), class: ['image-responsive', 'box-shadow', 'navbar-avatar', 'gap-right']) + ' ' + current_user.name %> <i class="caret"></i>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'Tu perfil', user_path(current_user.id) %></li>
      <li><%= link_to 'Editar perfil', edit_user_path(current_user.id) %></li>
      <li role="separator" class="divider"></li>
      <li class="dropdown-header">Contenidos</li>
      <li><%= link_to 'Tus eventos', user_events_path(user_id: current_user.id) %></li>
      <li><%= link_to 'Tus imágenes', user_images_path(user_id: current_user.id) %></li>
      <li><%= link_to 'Tus vídeos', user_videos_path(user_id: current_user.id) %></li>
      <li role="separator" class="divider"></li>
      <li class="dropdown-header">Publicar</li>
      <li><%= link_to 'Publicar evento', new_event_path %></li>
      <li><%= link_to 'Publicar imagen', new_image_path %></li>
      <li><%= link_to 'Publicar video', new_video_path %></li>
      <li role="separator" class="divider"></li>
      <li><%= link_to 'Salir', destroy_user_session_path, method: 'delete' %></li>
    </ul>
  </li>
  <!-- END MENÚ USUARIO -->

<% else %>
  <li><%= link_to fa_icon('user-plus')+' Regístrate', new_user_registration_path %></li>
  <li><%= link_to fa_icon('user')+' Accede', new_user_session_path %></li>
<% end %>
