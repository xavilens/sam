
<% if user_signed_in? %>

  <!-- MENSAJES -->
  <li>
    <%= link_to 'Mensajes', messages_path %>
  </li>
  <!-- FIN MENSAJES -->

  <!-- MENÚ USUARIO -->
  <li class="dropdown">

    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
      aria-haspopup="true" aria-expanded="false">
      <%= image_tag(current_user.avatar_url(:thumb_xs), class: ['image-responsive', 'box-shadow', 'navbar-avatar', 'gap-right']) + ' ' + current_user.name %> <i class="caret"></i>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'Tu perfil', user_path(current_user.id) %></li>
      <li><%= link_to 'Editar perfil', edit_user_path(current_user.id) %></li>
      <li><%= link_to 'Nuevo evento', '#' %></li>
      <!-- <li><%= link_to 'Nueva entrada', '#' %></li>
      <li><%= link_to 'Nuevo anuncio', '#' %></li> -->
      <% if current_user.is_admin? %>
        <li class="header-dropdown-separator">Administración</li>
        <li><%= link_to 'Perfil administración', '#' %></li>
        <li><%= link_to 'Publicar entrada', '#' %></li>
      <% end %>
      <li><%= link_to 'Salir', destroy_user_session_path, method: 'delete' %></li>
    </ul>
  </li>
  <!-- FIN MENÚ USUARIO -->

<% else %>
  <li><%= link_to fa_icon('user')+' Accede', new_user_session_path %></li>
  <li><%= link_to fa_icon('user-plus')+' Regístrate', new_user_registration_path %></li>
<% end %>
