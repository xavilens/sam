<!-- ref: https://github.com/plataformatec/devise/wiki/How-To:-Display-a-custom-sign_in-form-anywhere-in-your-app -->
<%= simple_form_for(:user, :url => session_path(:user),
  html: {class: 'form-horizontal'},
  wrapper: 'horizontal_form',
  wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean
  } ) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: false,
      placeholder: 'Email', wrapper: :field_12 %>
    <%= f.input :password, required: false, label: 'Contraseña', label: false,
      placeholder: 'Contraseña', hint: false, wrapper: :field_12 %>
    <%= f.input :remember_me, label: 'Recuérdame', as: :boolean,
      label_html: {class: 'text-shadow'}, wrapper: :inverse_bool_12 %>

    <%= f.button :submit, "Acceder", class: 'btn btn-md btn-primary col-sm-12' %>
    <%= link_to '¿Olvidaste tu contraseña?', new_password_path(:user), class: 'landing-font gap-top text-left col-sm-12 text-shadow' %>
  </div>
<% end %>
