<% page_title @page %>

<div class="row">
  <div class="col-md-9">
    <!-- END Video Header -->
    <div class="page-header border">
      <h1><%= @title %></h1>
    </div>
    <!-- END Video Header -->

    <!-- Video Actions -->
    <div class="row gap-bottom">
      <div class="col-sm-4">
        <%= link_to fa_icon('plus')+" Crear video", new_video_path, class: 'btn btn-block btn-primary' %>
      </div>
      <div class="col-sm-4 col-sm-offset-4">
        <%= link_to "Volver", user_path(@user), class: 'btn btn-block btn-default' %>
      </div>
    </div>
    <!-- END Video Actions -->

    <!-- Videos -->
    <% no_data = true %>
    <% @videos.each do |video| %>
      <% no_data = false %>
      <%= render 'videos/video_container', video: video %>
    <% end %>

    <% if no_data %>
      <p class="no-data">El usuario no tiene ningún vídeo</p>
    <% end %>
    <!-- END Videos -->

  </div>

  <div class="col-md-3">
    <%= render 'videos/user_module' %>
  </div>

</div>
