<div class="row">
  <div class="messages-options">
    <div class="col-sm-12 btn-group-vertical" role="group">
      <span class="btn btn-block brn-default btn-group-header" type= "button">Bandejas de mensajes</span>
      <%= link_to messages_path(show: 'inbox'),
        class: "btn btn-block btn-default #{active_conversation_box('inbox')}", type: 'button' do %>
        Recibidos <%= inbox_unread_count %>
      <% end %>

      <%= link_to messages_path(show: 'outbox'),
        class: "btn btn-block btn-default #{active_conversation_box('outbox')}", type: 'button' do %>
        Enviados <%= outbox_unread_count %>
      <% end %>

      <%= link_to messages_path(show: 'membership'),
        class: "btn btn-block btn-default #{active_conversation_box('membership')}", type: 'button' do %>
        Miembros <%= membership_unread_count %>
      <% end %>

      <%= link_to messages_path(show: 'participants'),
        class: "btn btn-block btn-default #{active_conversation_box('participants')}", type: 'button' do %>
        Eventos <%= participants_unread_count %>
      <% end %>

      <%= link_to messages_path(show: 'search'),
        class: "btn btn-block btn-default #{active_conversation_box('search')}", type: 'button' do %>
        Encontrados
      <% end %>
    </div>
  </div>
</div>
