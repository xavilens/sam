
<div class="col-sm-12 messages-options btn-group-vertical" role="group">
  <%= link_to messages_path(show: 'inbox'),
    class: "btn btn-primary #{active_conversation_box('inbox')}", type: 'button' do %>
    Mensajes recibidos <%= inbox_count %>
  <% end %>

  <%= link_to messages_path(show: 'outbox'),
    class: "btn btn-primary #{active_conversation_box('outbox')}", type: 'button' do %>
    Mensajes enviados <%= outbox_count %>
  <% end %>

  <%= link_to messages_path(show: 'search'),
    class: "btn btn-primary #{active_conversation_box('search')}", type: 'button' do %>
    Mensajes buscados
  <% end %>
</div>
